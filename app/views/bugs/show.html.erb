<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @bug.title %></h1>

      <% if @bug.category.present? %>
        <div class="list-group">
              <p><strong>Prioridade:</strong></p><p><%= @bug.category.name %></p>
              <p><strong>Idade:</strong></p><p><%= @bug.category.age %></p>
        </div>
      <% else %>

        <%= form_for [@bug, @category] do |f| %>
          <div class="form-group">
            <%= f.label :age%>
            <%= f.text_field :age, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :name%>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      <% end %>
      <%= link_to "Todos os Bugs", bugs_path %>
    </div>
  </div>
</div>
