<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Todos bugs</h1>
      <ul class="list-group">
        <% @bugs.each do |bug| %>
          <li class="list-group-item">
            <%= link_to bug.title, bug_path(bug) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Novo Bug", new_bug_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
